<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="checkin">
        <field name="username" type="Blank" label="USERNAME" class="required validate-username" maxlength="150"
               required="true"/>
        <field name="password" type="Blank" label="PASSWORD" class="required validate-password" maxlength="150"
               password="true"
               required="true"/>
        <field name="code" type="Blank" label="EVENT_CODE" class="required validate-event-code" hint="a2c4-e6g8"
               maxlength="9"
               required="true"/>
    </fieldset>
    <fieldset name="participant">
        <field name="forename" type="Blank" required="true" class="input-15" label="FORENAME"/>
        <field name="surname" type="Blank" required="true" class="input-15" label="SURNAME"/>
        <field name="address" type="Blank" required="true" class="input-15" label="ADDRESS"/>
        <field name="zipCode" type="Blank" required="true" class="input-15" label="ZIP_CODE"/>
        <field name="city" type="Blank" required="true" class="input-15" label="RESIDENCE"/>
    </fieldset>
</form>