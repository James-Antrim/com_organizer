<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fields name="filter">
        <field name="search" type="Blank" label="SEARCH" hint="SEARCH"/>
        <field name="departmentID" type="Departments" label="ORGANIZATION" access="document"
               onchange="this.form.submit();">
            <option value="">ALL_ORGANIZATIONS</option>
            <option value="-1">NO_ORGANIZATION</option>
        </field>
        <field name="degreeID" type="GenericOptions" label="DEGREE" onchange="this.form.submit();"
               table="organizer_programs AS p,organizer_degrees AS d ON p.degreeID = d.id" textcolumn="d.abbreviation"
               valuecolumn="d.id">
            <option value="">ALL_DEGREES</option>
        </field>
        <field name="year" type="GenericOptions" label="YEAR" onchange="this.form.submit();" table="organizer_programs"
               textcolumn="year" valuecolumn="year">
            <option value="">ALL_ACCREDITATION_YEARS</option>
        </field>
        <field name="frequencyID" type="GenericOptions" label="FREQUENCY" localized="true"
               onchange="this.form.submit();"
               table="organizer_frequencies AS f,organizer_programs AS p ON f.id = p.frequencyID" textcolumn="f.name"
               valuecolumn="f.id">
            <option value="">ALL_FREQUENCIES</option>
            <option value="-1">NO_FREQUENCY</option>
        </field>
        <field name="fieldID" type="GenericOptions" label="FIELD" localized="true" onchange="this.form.submit();"
               table="organizer_fields AS f,organizer_programs AS p ON f.id = p.fieldID" textcolumn="f.name"
               valuecolumn="f.id">
            <option value="">ALL_FIELDS</option>
            <option value="-1">NO_FIELD</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="Limitbox" onchange="this.form.submit();"/>
    </fields>
</form>
